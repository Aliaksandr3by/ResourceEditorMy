<div class="input-field col">
    <select id="countrySelect" name="Id" required>
        <option disabled selected>Select language</option>
        @foreach (var item in ResourceEditor.Managers.XmlManager.GetLanguages())
        {
            <option value="@item.Id">@item.Id - @item.Value (@item.Comment)</option>
        }
    </select>
</div>