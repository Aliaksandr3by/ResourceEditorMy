<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ResX Editor</title>
    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/Kendo")

    @Scripts.Render("~/bundles/modernizr")

    @Styles.Render("~/Content/site")


</head>
<body>
    <header>
        <ul>
            <li>@Html.ActionLink("Add Line Resourcel", "AddLineResource", "Home")</li>
            <li>@Html.ActionLink("Main Table", "MainTableResource", "Home")      </li>
            <li>@Html.ActionLink("Main Kendo Table", "ReadCrud", "CRUDKendoTable")        </li>
        </ul>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer></footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/Kendo")
    @Scripts.Render("~/bundles/main")

    @RenderSection("scripts", required: false)

</body>
</html>
