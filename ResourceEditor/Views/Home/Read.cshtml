@section scriptsHead {
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/NavMenu.css" rel="stylesheet" />
}

@{
    ViewBag.Title = "Native";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["BrowserType"]</h1>

<div id="colFileContainer">
    <div class="flex-container">
        <input class="flex-container-element element-01" id="FileResource" type="file" multiple accept=".resx" />
        <button class="flex-container-element element-02" type="button" id="ResourceUploads">Upload</button>
    </div>
    <div class="fileUpload"></div>
</div>

<div id="colLanguageChange">
    <div class="flex-container" id="CountrySelect">
        <button class="flex-container-element element-02" type="button" id="countrySelectRefresh">Refresh</button>
        <button class="flex-container-element element-03" type="button" id="ResourceSave">Download</button>
    </div>
</div>

<div class="col">
    <div id="rootMainTable">
        <table id="mainTable">
            <colgroup class=""></colgroup>
            <caption>
                <p>ResX data</p>
            </caption>
            <thead>
                <tr id="mainDataHeadTable">
                    <th scope="col"><button class="btn BtnSort" value="Id" id="BtnSortId" type="button">Id</button></th>
                    <th scope="col"><button class="btn BtnSort" value="Value" id="BtnSortValue" type="button">Value</button></th>
                    <th scope="col"><button class="btn BtnSort" value="Comment" id="BtnSortComment" type="button">Comment</button></th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
                <tr id="mainDataHeadFilterTable">
                    <th scope="col"><input type="search" class="btn inputSearch" name="Id" placeholder="Filter by Id" /></th>
                    <th scope="col"><input type="search" class="btn inputSearch" name="Value" placeholder="Filter by Value" /></th>
                    <th scope="col"><input type="search" class="btn inputSearch" name="Comment" placeholder="Filter by Comment" /></th>
                    <th scope="col" colspan="2"><button  class="btn BtnClear" id="BtnClear" type="button">Clear</button></th>
                </tr>
            </thead>
            <tfoot></tfoot>
            <tbody id="mainDataBodyTable"></tbody>
        </table>
    </div>
    <div class="buttonAdd">
        <button type="button" class="btn btn-circle" id="addTableRow">+</button>
    </div>
</div>


@section scriptsFooter {
    <script type="module" src="~/node_modules/jquery/dist/jquery.js"></script>
    <script src="~/out/main.js" type="module"></script>
}