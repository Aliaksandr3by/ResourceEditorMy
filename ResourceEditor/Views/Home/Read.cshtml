@section scriptsHead {
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/NavMenu.css" rel="stylesheet" />
}

@{
    ViewBag.Title = "Native";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["BrowserType"]</h1>

<div class="row">
    <div class="col">
        <div class="fileContainer">
            <input class="fileContainer-1 custom-select" id="FileResource" type="file" multiple accept=".resx" />
            <button class="fileContainer-2" type="button" id="ResourceUploads">Upload</button>
        </div>
        <div class="fileUpload"></div>
    </div>
</div>
<br />
<div class="row">
    <div class="col">
        <div class="fileContainer" id="CountrySelect">
            <button class="fileContainer-2" type="button" id="countrySelectRefresh">Refresh</button>
            <button class="fileContainer-2" type="button" id="ResourceSave">Download</button>
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="col">
        <div id="rootMainTable">
            <table id="mainTable">
                <colgroup class=""></colgroup>
                <caption>
                    <p>ResX data</p>
                </caption>
                <thead>
                    <tr id="mainDataHeadTable">
                        <th scope="col"><button class="BtnSort" value="Id" id="BtnSortId" type="button">Id</button></th>
                        <th scope="col"><button class="BtnSort" value="Value" id="BtnSortValue" type="button">Value</button></th>
                        <th scope="col"><button class="BtnSort" value="Comment" id="BtnSortComment" type="button">Comment</button></th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                    </tr>
                    <tr id="mainDataHeadFilterTable">
                        <th scope="col"><input type="search" class="inputSearch" name="Id" placeholder="Filter by Id" /></th>
                        <th scope="col"><input type="search" class="inputSearch" name="Value" placeholder="Filter by Value" /></th>
                        <th scope="col"><input type="search" class="inputSearch" name="Comment" placeholder="Filter by Comment" /></th>
                        <th scope="col" colspan="2"><button class="BtnClear" id="BtnClear" type="button">Clear</button></th>
                    </tr>
                </thead>
                <tfoot></tfoot>
                <tbody id="mainDataBodyTable"></tbody>
            </table>
        </div>
        <div class="buttonAdd">
            <button type="button" class="btn-circle" id="addTableRow">+</button>
        </div>
    </div>
</div>


@section scriptsFooter {
    <script type="module" src="~/node_modules/jquery/dist/jquery.js"></script>
    <script src="~/out/main.js" type="module"></script>
}