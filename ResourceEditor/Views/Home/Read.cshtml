}

@{
    ViewBag.Title = "Main Table";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    <div id="fileInput" class="form-group">
        <label for="exampleInputFile">File input</label>
        <input type="file" class="form-control-file" id="exampleInputFile" aria-describedby="fileHelp">
        <small id="fileHelp" class="form-text text-muted">This is some placeholder block-level help text for the above input. It's a bit lighter and easily wraps to a new line.</small>
    </div>

    <div class="mainTableResource">
        <form method="post" action="@Url.Action("Read", "Home")">
            <br />
            <p>
                <select class="form-control d-inline w-100" id="countrySelect" name="Id" required>
                    <option disabled selected>Select language</option>
                    @foreach (var item in ResourceEditor.Managers.XmlManager.GetLanguages())
                    {
                        <option value="@item.Id">@item.Value</option>
                    }
                </select>
            </p>
            <br />
            <div id="rootMainTable">
                <table id="mainTable" class="table table-striped">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Key</th>
                            <th scope="col">Value</th>
                            <th scope="col">Comment</th>
                            <th scope="col"></th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody id="mainDataBodyTable">
                        @*@Html.Partial("UpdateData")*@
                    </tbody>
                </table>
            </div>
            <p><button type="button" class="btn btn-warning d-inline w-100" id="addTableRow">+</button></p>
        </form>
    </div>
}