    ViewBag.Title = "MainTableResource";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>MainTableResource</h2>

<p>@ViewBag.cult</p>

<script type="text/javascript">
    let urlControlDeleteMethod = "@Url.Action("DeleteLineResourceControl", "Home")";
    let urlControlEditMethod = "@Url.Action("MainTableResource", "Home")";
</script>

@{
@*<form action="@Url.Action("MainTableResource", "Home")" method="post">
